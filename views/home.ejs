<% include partials/header %>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Movie Share</h1>
        <p class="lead">Is there a new movie you watched and loved? Add it to the list as a suggestion for others to watch!</p>
    </div>
</div>


<div class="container">
    <div class="form-area">
        <div class="form col-4">
            <!-- Form Start -->
            <form action="/movies" method="POST">
                <div class="form-group">
                    <input type="text" name="movieName" class="form-control" id="movieNameInput"
                        placeholder="Movie Name">
                </div>
                <div class="form-group">
                    <input type="text" name="image" class="form-control" id="movieImageInput" placeholder="Poster URL">
                </div>
                <div class="form-group form-check text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            <!-- Form End -->
        </div>
    </div>
</div>


<% include partials/footer %>